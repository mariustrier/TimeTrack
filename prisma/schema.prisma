generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  currency               String  @default("USD")
  economicRevenueAccount String?
  economicCounterAccount String?
  economicVatCode        String?
  economicCurrency       String  @default("DKK")

  users            User[]
  projects         Project[]
  timeEntries      TimeEntry[]
  vacationRequests VacationRequest[]
}

model User {
  id            String   @id @default(cuid())
  clerkId       String   @unique
  email         String
  firstName     String?
  lastName      String?
  imageUrl      String?
  role          String   @default("employee") // "admin" | "employee"
  hourlyRate    Float    @default(0)
  costRate      Float    @default(0)
  weeklyTarget  Float    @default(40)
  vacationDays  Int      @default(25)
  companyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company          Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  timeEntries      TimeEntry[]
  vacationRequests VacationRequest[]

  @@index([companyId])
  @@index([clerkId])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  client      String?
  color       String   @default("#3B82F6")
  budgetHours Float?
  billable    Boolean  @default(true)
  active      Boolean  @default(true)
  currency    String?
  companyId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company     Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  timeEntries TimeEntry[]

  @@index([companyId])
}

model TimeEntry {
  id        String   @id @default(cuid())
  hours     Float
  date      DateTime
  comment   String?
  userId    String
  projectId String
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Approval workflow
  approvalStatus    String    @default("draft")     // "draft" | "submitted" | "approved" | "locked"
  submittedAt       DateTime?
  submittedBy       String?
  approvedAt        DateTime?
  approvedBy        String?
  rejectedAt        DateTime?
  rejectedBy        String?
  lockedAt          DateTime?
  lockedBy          String?

  // Billing category
  billingStatus     String    @default("billable")  // "billable" | "included" | "non_billable" | "internal" | "presales"
  nonBillableReason String?

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
  @@index([companyId])
  @@index([date])
  @@index([approvalStatus])
  @@index([companyId, approvalStatus, date])
}

model VacationRequest {
  id         String    @id @default(cuid())
  userId     String
  companyId  String
  startDate  DateTime
  endDate    DateTime
  type       String    @default("vacation") // "vacation" | "sick" | "personal"
  status     String    @default("pending")  // "pending" | "approved" | "rejected"
  note       String?
  reviewedBy String?
  reviewedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([status])
}

model AuditLog {
  id         String   @id @default(cuid())
  companyId  String
  entityType String   // "TimeEntry"
  entityId   String   // entry ID or batch identifier
  action     String   // "SUBMIT" | "APPROVE" | "REJECT" | "LOCK" | "REOPEN" | "EDIT_BILLING"
  fromStatus String?
  toStatus   String?
  actorId    String
  metadata   String?  // JSON string for extra context
  createdAt  DateTime @default(now())

  @@index([companyId])
  @@index([entityId])
  @@index([createdAt])
}
