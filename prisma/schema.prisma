generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  currency               String  @default("USD")
  economicRevenueAccount String?
  economicCounterAccount String?
  economicVatCode        String?
  economicCurrency       String  @default("DKK")
  defaultHourlyRate      Float?
  useUniversalRate       Boolean @default(false)
  aiAnonymization        Boolean @default(true)
  expenseAutoApproveThreshold Float?
  logoUrl                     String?
  lastActivityAt              DateTime?  // Track when any user from this company was last active

  // Holiday configuration
  disabledHolidays String[] @default([]) // Danish holiday codes that are disabled for this company

  // Project phases
  phasesEnabled Boolean @default(false)

  // Invoice settings
  invoicePrefix       String?     // e.g., "CT-" for invoice display (optional)
  nextInvoiceNumber   Int         @default(1)
  defaultPaymentDays  Int         @default(8)
  companyAddress      String?     // Seller address for invoices
  companyCvr          String?     // Company's own CVR number
  companyBankAccount  String?     // Bank details for payment
  companyBankReg      String?     // Registration number
  invoiceFooterNote   String?     // Default footer text

  // Accounting integration
  accountingSystem        String?     // "e-conomic" | "billy" | "dinero" | null
  accountingCredentials   String?     // Encrypted JSON with system-specific credentials

  users               User[]
  projects            Project[]
  timeEntries         TimeEntry[]
  vacationRequests    VacationRequest[]
  projectAllocations  ProjectAllocation[]
  resourceAllocations ResourceAllocation[]
  insights            ContractInsight[]
  expenses            Expense[]
  companyExpenses     CompanyExpense[]
  expenseCategories   ExpenseCategory[]
  absenceReasons      AbsenceReason[]
  companyHolidays     CompanyHoliday[]
  phases              Phase[]
  supportAccesses     SupportAccess[]
  invoices            Invoice[]
  customerMappings    CustomerMapping[]
}

model User {
  id            String   @id @default(cuid())
  clerkId       String   @unique
  email         String
  firstName     String?
  lastName      String?
  imageUrl      String?
  role           String   @default("employee") // "admin" | "manager" | "employee"
  employmentType String   @default("employee") // "employee" | "freelancer"
  hourlyRate     Float    @default(0)
  costRate      Float    @default(0)
  weeklyTarget  Float    @default(37)
  isHourly      Boolean  @default(false)
  vacationDays  Int      @default(0)
  vacationTrackingUnit  String   @default("days")  // "days" | "hours"
  vacationHoursPerYear  Float?                     // annual vacation hour entitlement (e.g., 150 for 30h/week)
  companyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  acceptedTermsAt      DateTime?
  tourCompletedAt      DateTime?
  setupTourCompletedAt DateTime?
  dismissedGuides      String[]  @default([])
  deletionRequestedAt  DateTime?
  deletionReason       String?
  deletedAt            DateTime?

  // User preferences
  locale              String   @default("en")    // "en" | "da"
  notifyApprovals     Boolean  @default(true)
  notifyVacations     Boolean  @default(true)
  notifyWeeklyDigest  Boolean  @default(true)

  company             Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  timeEntries         TimeEntry[]
  vacationRequests    VacationRequest[]
  allocations         ProjectAllocation[]
  resourceAllocations ResourceAllocation[]
  uploadedContracts   Contract[]
  dismissedInsights   ContractInsight[]    @relation("DismissedInsights")
  expenses            Expense[]
  absenceReasons      AbsenceReason[]      @relation("UserAbsenceReasons")

  @@index([companyId])
  @@index([clerkId])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  client      String?
  color       String   @default("#3B82F6")
  budgetHours Float?
  pricingType String   @default("hourly") // "hourly" | "fixed_price"
  fixedPrice  Float?
  rateMode    String   @default("COMPANY_RATE") // "COMPANY_RATE" | "EMPLOYEE_RATES" | "PROJECT_RATE"
  projectRate Float?
  billable    Boolean  @default(true)
  active      Boolean  @default(true)
  currency    String?
  companyId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // System-managed projects (e.g., Absence)
  systemType    String?  // "absence" | null for regular projects
  systemManaged Boolean  @default(false) // Cannot be deleted/archived if true

  // Lock and archive states
  locked      Boolean   @default(false)  // Employees can't add entries, admins can still approve
  lockedAt    DateTime?
  lockedBy    String?
  archived    Boolean   @default(false)  // Completely hidden from employees
  archivedAt  DateTime?
  archivedBy  String?

  // Project timeline dates
  startDate   DateTime?
  endDate     DateTime?

  // Phase tracking
  phasesEnabled    Boolean   @default(true)   // per-project opt-out when company phases enabled
  currentPhaseId   String?
  phaseCompleted   Boolean   @default(false)  // all phases done
  phaseCompletedAt DateTime?

  company             Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  currentPhase         Phase?               @relation("CurrentPhase", fields: [currentPhaseId], references: [id], onDelete: SetNull)
  timeEntries         TimeEntry[]
  allocations         ProjectAllocation[]
  resourceAllocations ResourceAllocation[]
  milestones          ProjectMilestone[]
  projectPhases       ProjectPhase[]
  contracts           Contract[]
  expenses            Expense[]
  invoices            Invoice[]

  @@index([companyId])
}

model TimeEntry {
  id        String   @id @default(cuid())
  hours     Float
  date      DateTime
  comment   String?
  userId    String
  projectId String
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Approval workflow
  approvalStatus    String    @default("draft")     // "draft" | "submitted" | "approved" | "locked"
  submittedAt       DateTime?
  submittedBy       String?
  approvedAt        DateTime?
  approvedBy        String?
  rejectedAt        DateTime?
  rejectedBy        String?
  lockedAt          DateTime?
  lockedBy          String?

  // Billing category
  billingStatus     String    @default("billable")  // "billable" | "included" | "non_billable" | "internal" | "presales"
  nonBillableReason String?

  // Mileage tracking
  mileageKm           Float?
  mileageStartAddress String?
  mileageEndAddress   String?
  mileageStops        String[]  @default([])  // Intermediate stops
  mileageRoundTrip    Boolean   @default(false)
  mileageSource       String?   // "manual" | "calculated"

  // Absence tracking
  absenceReasonId String?

  // Phase attribution
  phaseId   String?
  phaseName String?  // Denormalized snapshot of phase name at time of entry

  // Invoice tracking
  invoiceId   String?
  invoicedAt  DateTime?

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  absenceReason AbsenceReason? @relation(fields: [absenceReasonId], references: [id], onDelete: SetNull)
  phase         Phase?         @relation(fields: [phaseId], references: [id], onDelete: SetNull)
  invoice       Invoice?       @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([projectId])
  @@index([companyId])
  @@index([date])
  @@index([approvalStatus])
  @@index([companyId, approvalStatus, date])
  @@index([phaseId])
}

model VacationRequest {
  id         String    @id @default(cuid())
  userId     String
  companyId  String
  startDate  DateTime
  endDate    DateTime
  type       String    @default("vacation") // "vacation" | "sick" | "personal"
  status     String    @default("pending")  // "pending" | "approved" | "rejected"
  note       String?
  reviewedBy String?
  reviewedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([status])
}

model AuditLog {
  id         String   @id @default(cuid())
  companyId  String
  entityType String   // "TimeEntry"
  entityId   String   // entry ID or batch identifier
  action     String   // "SUBMIT" | "APPROVE" | "REJECT" | "LOCK" | "REOPEN" | "EDIT_BILLING"
  fromStatus String?
  toStatus   String?
  actorId    String
  metadata   String?  // JSON string for extra context
  createdAt  DateTime @default(now())

  @@index([companyId])
  @@index([entityId])
  @@index([createdAt])
}

model ProjectAllocation {
  id        String   @id @default(cuid())
  hours     Float
  projectId String
  userId    String
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([companyId])
  @@index([userId])
}

enum InsightCategory {
  OPPORTUNITY
  INSIGHT
  SUGGESTION
  HEADS_UP
  CELEBRATION
}

model Contract {
  id               String    @id @default(cuid())
  projectId        String
  fileName         String
  fileUrl          String
  fileType         String
  fileSize         Int
  extractedTerms   Json?
  extractedAt      DateTime?
  maxHours         Float?
  maxBudget        Float?
  budgetCurrency   String?
  deadline         DateTime?
  scopeDescription String?
  scopeKeywords    String[]
  exclusions       String[]
  scopeAdditions   String?
  uploadedById     String
  notes            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  project    Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadedBy User              @relation(fields: [uploadedById], references: [id])
  insights   ContractInsight[]

  @@index([projectId])
}

model ContractInsight {
  id              String          @id @default(cuid())
  contractId      String?
  companyId       String
  category        InsightCategory
  title           String
  description     String
  suggestion      String?
  relatedHours    Float?
  relatedAmount   Float?
  relatedEntryIds String[]
  dismissed       Boolean         @default(false)
  dismissedById   String?
  dismissedAt     DateTime?
  actionTaken     String?
  seenAt          DateTime?
  createdAt       DateTime        @default(now())
  expiresAt       DateTime?

  contract    Contract? @relation(fields: [contractId], references: [id], onDelete: SetNull)
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  dismissedBy User?     @relation("DismissedInsights", fields: [dismissedById], references: [id])

  @@index([companyId, dismissed])
}

model AIApiUsage {
  id           String   @id @default(cuid())
  companyId    String
  endpoint     String
  model        String
  inputTokens  Int
  outputTokens Int
  costCents    Float
  createdAt    DateTime @default(now())

  @@index([companyId, createdAt])
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  description String
  category    String   @default("other")
  date        DateTime
  userId      String
  projectId   String
  companyId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  approvalStatus  String    @default("draft")
  submittedAt     DateTime?
  approvedAt      DateTime?
  approvedBy      String?
  rejectedAt      DateTime?
  rejectedBy      String?
  rejectionReason String?

  receiptUrl      String?
  receiptFileName String?
  receiptFileSize Int?

  isFinalized     Boolean   @default(false)
  finalizedAt     DateTime?
  isDeleted       Boolean   @default(false)
  deletedAt       DateTime?
  deletedBy       String?

  // Invoice tracking
  invoiceId   String?
  invoicedAt  DateTime?

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  invoice Invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  @@index([companyId, approvalStatus, date])
  @@index([userId])
  @@index([projectId])
}

model CompanyExpense {
  id          String   @id @default(cuid())
  amount      Float
  description String
  category    String
  date        DateTime
  recurring   Boolean  @default(false)
  frequency   String?
  companyId   String
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  receiptUrl      String?
  receiptFileName String?
  receiptFileSize Int?

  isFinalized     Boolean   @default(false)
  finalizedAt     DateTime?
  isDeleted       Boolean   @default(false)
  deletedAt       DateTime?
  deletedBy       String?

  expenseCategoryId String?
  company           Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  expenseCategory   ExpenseCategory? @relation(fields: [expenseCategoryId], references: [id], onDelete: SetNull)

  @@index([companyId, date])
  @@index([expenseCategoryId])
}

// ─── EXPENSE CATEGORIES ───
// Company-scoped custom categories for company expenses

model ExpenseCategory {
  id        String   @id @default(cuid())
  name      String
  isDefault Boolean  @default(false)
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company         Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyExpenses CompanyExpense[]

  @@unique([companyId, name])
  @@index([companyId])
}

model AbsenceReason {
  id        String   @id @default(cuid())
  name      String   // e.g., "Sygdom", "Ferie"
  code      String?  // Optional short code
  isDefault Boolean  @default(false) // System default, cannot be deleted
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company     Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  timeEntries TimeEntry[]
  users       User[]      @relation("UserAbsenceReasons")

  @@unique([companyId, name])
  @@index([companyId])
}

// ─── PROJECT PHASES ───
// Company-wide phase definitions that projects progress through
model Phase {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3B82F6")
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  companyId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company            Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  currentForProjects Project[]      @relation("CurrentPhase")
  timeEntries        TimeEntry[]
  projectPhases      ProjectPhase[]

  @@unique([companyId, name])
  @@index([companyId])
}

// ─── PROJECT PHASE SEGMENTS ───
// Per-project phase date ranges for timeline visualization
model ProjectPhase {
  id        String   @id @default(cuid())
  projectId String
  phaseId   String
  startDate DateTime
  endDate   DateTime
  status    String   @default("active") // "active" | "completed"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  phase   Phase   @relation(fields: [phaseId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@unique([projectId, phaseId])
}

// ─── SUPPORT ACCESS ───
// Super admin consent-based access to company contexts
model SupportAccess {
  id           String    @id @default(cuid())
  companyId    String
  requestedBy  String    // User ID of super admin
  status       String    @default("pending") // pending | granted | active | expired
  grantedBy    String?
  grantedAt    DateTime?
  activatedAt  DateTime?
  expiredAt    DateTime?
  expiryReason String?   // manual_exit | admin_revoked | auto_expired
  createdAt    DateTime  @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId, status])
  @@index([requestedBy, status])
}

// ─── RESOURCE ALLOCATIONS (Time-bounded) ───
// Used for resource planning - who works on what project, when
model ResourceAllocation {
  id          String   @id @default(cuid())
  companyId   String
  userId      String
  projectId   String
  startDate   DateTime
  endDate     DateTime
  hoursPerDay Float    @default(7.5)
  totalHours  Float?   // If set, hours roll over when not logged; hoursPerDay is calculated
  status      String   @default("tentative") // "tentative" | "confirmed" | "completed"
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([userId, startDate, endDate])
  @@index([projectId])
}

// ─── PROJECT MILESTONES ───
// For project timeline view - key dates/deliverables
model ProjectMilestone {
  id          String    @id @default(cuid())
  projectId   String
  title       String
  dueDate     DateTime
  completed   Boolean   @default(false)
  completedAt DateTime?
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

// ─── COMPANY HOLIDAYS ───
// Custom company-specific holidays (in addition to Danish national holidays)
model CompanyHoliday {
  id        String   @id @default(cuid())
  companyId String
  name      String
  month     Int      // 1-12
  day       Int      // 1-31
  year      Int?     // null = recurring annually, set = one-time
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, month, day, year])
  @@index([companyId])
}

// ─── INVOICES ───
// Invoice drafts created from approved time entries + expenses
model Invoice {
  id              String          @id @default(cuid())
  companyId       String
  company         Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Invoice identity
  invoiceNumber   Int             // Sequential per company
  status          String          @default("draft") // draft | sent | paid | void

  // Client info (denormalized from project)
  projectId       String
  project         Project         @relation(fields: [projectId], references: [id])
  clientName      String
  clientAddress   String?
  clientCvr       String?         // Client's CVR number
  clientEan       String?         // Client's EAN number (public sector)

  // Dates
  invoiceDate     DateTime        @default(now())
  dueDate         DateTime
  periodStart     DateTime
  periodEnd       DateTime

  // Financials (all amounts in company currency, excl. VAT)
  subtotal        Float
  vatRate         Float           @default(25) // Danish MOMS
  vatAmount       Float
  total           Float
  currency        String          @default("DKK")

  // Payment terms
  paymentTermsDays Int            @default(8) // Danish standard: "Netto 8 dage"

  // Optional note
  note            String?

  // Accounting system sync
  externalId      String?         // ID in the accounting system
  externalSystem  String?         // "e-conomic" | "billy" | "dinero"
  syncedAt        DateTime?

  // Relations
  lines           InvoiceLine[]
  timeEntries     TimeEntry[]
  expenses        Expense[]

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([companyId])
  @@index([projectId])
  @@unique([companyId, invoiceNumber])
}

model InvoiceLine {
  id              String          @id @default(cuid())
  invoiceId       String
  invoice         Invoice         @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  sortOrder       Int             @default(0)
  description     String
  quantity        Float           // Hours or count
  unitPrice       Float           // Bill rate
  amount          Float           // quantity × unitPrice

  // Source tracking
  type            String          @default("time") // "time" | "expense" | "manual"
  timeEntryIds    String[]        // Array of TimeEntry IDs in this line
  expenseIds      String[]        // Array of Expense IDs in this line

  // Optional phase info
  phaseName       String?

  @@index([invoiceId])
}

// ─── CUSTOMER MAPPING ───
// Maps Cloud Timer project clients to accounting system customers
model CustomerMapping {
  id              String   @id @default(cuid())
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  clientName      String   // Client name in Cloud Timer
  externalCustomerId   String   // Customer ID in accounting system
  externalCustomerName String   // Customer name in accounting system

  createdAt       DateTime @default(now())

  @@unique([companyId, clientName])
  @@index([companyId])
}

// ─── OAUTH STATE ───
// Temporary CSRF protection tokens for accounting system OAuth flows
model OAuthState {
  id        String   @id @default(cuid())
  state     String   @unique
  companyId String
  provider  String   // "e-conomic" or "dinero"
  expiresAt DateTime
  createdAt DateTime @default(now())
}
